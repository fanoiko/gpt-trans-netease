{
    "include": [
        "./src/**/*.js",
        "./src/**/*.scss"
    ],
    "exclude": [
        "./node_modules",
        "./dist"
    ],
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "ESNext",
            "DOM",
            "WebWorker"
        ],
        "module": "ESNext",
        "types": [],
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "allowJs": true,
        "checkJs": true,
        "noEmit": true
    }
}
